{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Harmony",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operator"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "operator": {
      "patterns": [
        {
          "name": "support.type",
          "match": "(\\{|\\})"
        },
        {
          "name": "entity.other.attribute-name.id.css",
          "match": "(\\(|\\))"
        },
        {
          "name": "entity.name.function",
          "match": "(\\[|\\])"
        },
        {
          "name": "string.regexp",
          "match": "(\\b(not)\\b|\\.\\.|\\:|\\;|\\,|\\::|\\=|\\=\\=|\\>|\\>\\=|\\<|\\<\\=|\\!|\\<\\>|\\^|\\%|\\+|\\-|\\*|\\/|\\|\\||\\&\\&|\\:\\=)"
        }
      ]
    },
    "comment": {
      "name": "comment",
      "patterns": [
        {
          "name": "comment.line.double-slash",
          "match": "\\#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.harmony",
          "match": "\\b(if|else|while|in|let|for|def|import|such|that)\\b"
        },
        {
          "name": "keyword.harmony",
          "match": "\\b(const|result|assert|choose|spawn|wait|await)\\b"
        },
        {
          "name": "keyword.operator.new",
          "match": "\\b(True|False)\\b"
        },
        {
          "name": "keyword.operator.new.harmony",
          "match": "\\;"
        },
        {
          "name": "constant.numeric",
          "match": "[0-9]"
        }
      ]
    }
  },
  "scopeName": "source.hny"
}
